<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	   xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-3.0.xsd">

	<!-- Apps -->

	<bean id="kenyalab.app.lab" factory-bean="kenyacore.appFactoryBean" factory-method="createInstance">
		<constructor-arg value="kenyalab.lab" />
		<constructor-arg value="Lab" />
		<constructor-arg value="kenyalab/example/home.page" />
		<constructor-arg value="kenyalab:apps/example.png" />
		<constructor-arg value="700" />
	</bean>

	<!-- Forms -->

	<bean id="kenyalab.form.lab" class="org.openmrs.module.kenyacore.form.FormDescriptor">
		<property name="targetUuid" value="b694b1bc-2086-47dd-a4ad-ba48f9471e4b" />
		<property name="apps">
			<set>
				<ref bean="kenyaemr.app.clinician" />
				<ref bean="kenyaemr.app.chart" />
			</set>
		</property>
		<property name="icon" value="kenyalab:forms/example.png" />
		<property name="htmlform" value="kenyalab:example.xml" />
	</bean>

	<bean id="kenyalab.config.form" class="org.openmrs.module.kenyacore.form.FormConfiguration">
		<!-- Example of adding a form to the general visit form list -->
		<property name="commonVisitForms">
			<set>
				<ref bean="kenyalab.form.lab" />
			</set>
		</property>

		<!-- Example of adding a form to the HIV program visit form list -->
		<!--<property name="programVisitForms">
			<map>
				<entry key-ref="kenyaemr.program.hiv">
					<set><ref bean="kenyalab.form.example" /></set>
				</entry>
			</map>
		</property>-->

		<!-- Example of disabling an existing form. This form will no longer appear in the "Available Forms" list -->
		<property name="disabledForms">
			<set>
				<ref bean="kenyaemr.common.form.progressNote" />
			</set>
		</property>
	</bean>
	
</beans>
